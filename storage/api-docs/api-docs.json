        "/api/auth/me": {
            "post": {
                "tags": [
                    "Аутентификация"
                ],
                "summary": "Получить данные по аутентифицированному пользователю",
                "operationId": "c1e72b2e39f9060f1577a2664fa375be",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Some name"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "Some email"
                                        },
                                        "email_verified_at": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "remember_token": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "role": {
                                            "type": "integer",
                                            "example": 0
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 0
                                        },
                                        "full_name": {
                                            "type": "string",
                                            "example": "Some full name"
                                        },
                                        "last_login_date": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-15T01:52:11.000000Z"
                                        },
                                        "login_ip": {
                                            "type": "string",
                                            "example": "Some IP"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-15T01:52:11.000000Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-15T01:52:11.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
