{
    "openapi": "3.0.0",
    "info": {
        "title": "Knowledge Core API",
        "description": "Дата обновления: 29.10.2025",
        "version": "1.0.0"
    },
    "paths": {
        "/api/": {},
        "/api/auth/login": {
            "post": {
                "tags": [
                    "Аутентификация"
                ],
                "summary": "Вход в систему",
                "operationId": "4ed2d4ad482dbe329dc4b3dd1e97ba7c",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "allOf": [
                                    {
                                        "properties": {
                                            "email": {
                                                "type": "string",
                                                "example": "Some email"
                                            },
                                            "password": {
                                                "type": "string",
                                                "example": "Some password"
                                            }
                                        },
                                        "type": "object"
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "Generated new token"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/refresh": {
            "post": {
                "tags": [
                    "Аутентификация"
                ],
                "summary": "Обновление токена",
                "description": "Для обновления токена необходимо отправить старый (сгоревший) токен.",
                "operationId": "e9c0fcf285155c43948b0e65fa077c5e",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "example": "Generated new token"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "example": "bearer"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "example": 3600
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/me": {
            "post": {
                "tags": [
                    "Аутентификация"
                ],
                "summary": "Получить данные по аутентифицированному пользователю",
                "operationId": "c1e72b2e39f9060f1577a2664fa375be",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Some name"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "Some email"
                                        },
                                        "email_verified_at": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "remember_token": {
                                            "type": "string",
                                            "example": null
                                        },
                                        "role": {
                                            "type": "integer",
                                            "example": 0
                                        },
                                        "status": {
                                            "type": "integer",
                                            "example": 0
                                        },
                                        "full_name": {
                                            "type": "string",
                                            "example": "Some full name"
                                        },
                                        "last_login_date": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-15T01:52:11.000000Z"
                                        },
                                        "login_ip": {
                                            "type": "string",
                                            "example": "Some IP"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-15T01:52:11.000000Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "format": "date-time",
                                            "example": "2025-09-15T01:52:11.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": [
                    "Аутентификация"
                ],
                "summary": "Выход из системы",
                "operationId": "76091f15f3ecbb84edf45f4bb0cfe8ce",
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User successfully signed out."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Аутентификация",
            "description": "Аутентификация"
        }
    ]
}